pipeline {
  agent any
  tools { 
    maven 'maven 3.6.3' 
  }
  stages { 
      stage ("Build") {
      steps {
	    sh "mvn clean install" 
      }  
     }
      stage ("Test") {
     steps {
                sh 'mvn -Dmaven.test.failure.ignore=true install' 
            }
            post {
                always {
                    junit 'target/surefire-reports/**/*.xml' 
                    
                    echo "Pipeline currentResult: ${currentBuild.currentResult}"
                    
                    // if (qualitygate.status != "OK") {
                    
                }
            }
     }
    }
}
